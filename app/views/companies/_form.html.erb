<%= form_for @company do |f| %>
  <fieldset class="form-group">
    <%= f.label :name%>
    <%= render partial: 'shared/form_notification', locals: {object: @company, field: :name} %>
    <%= f.text_field :name, class: "form-control" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :location%>
    <%= render partial: 'shared/form_notification', locals: {object: @company, field: :location} %>
    <%= f.text_field :location, class: "form-control", placeholder:"SÃ£o Paulo - SP" %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :mail%>
    <%= render partial: 'shared/form_notification', locals: {object: @company, field: :mail} %>
    <%= f.text_field :mail, class: "form-control"%>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :phone%>
    <%= render partial: 'shared/form_notification', locals: {object: @company, field: :phone} %>
    <%= f.text_field :phone, class: "form-control"%>
  </fieldset>

  <%= f.submit class:'btn btn-primary' %>
<% end %>
